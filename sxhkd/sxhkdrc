# Quit and restart bspwm
super + alt + {q,shift + }r
    bspc {quit,wm -r}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Focus the next/previous node in the current desktop
super + {_,shift + }n
    bspc node -f {next,prev}.local.!hidden.window

# Set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Move the focused window
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# Move to or send window to workspace #
super + {_,shift + }{1-6}
	bspc {desktop -f,node -d} '^{1-6}'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Add focused window to a tabbed instance
super + t; {h,j,k,l}
    tabc $(bspc query -N -n {west,south,north,east}) add $(bspc query -N -n focused)

# Remove the focused window from a tabbed instance
super + t; r
    tabbed=$(bspc query -N -n focused); \
    child=$(tabc list $tabbed | head -n1); \
    tabc $tabbed remove $child

# Set new window orientation
# super + ctrl + {h,j,k,l}
#     bspc node -p {west,south,north,east}

# Cancel the new window orientation
# super + ctrl + space
#     bspc node -p cancel

# Lock screen
ctrl + alt + q
    lock

# Start alacritty
super + Return
    alacritty -t "term"

# Open Broswer
super + b
    firefox-nightly

# Open FileManager
super + m
    sh $HOME/.config/rofi/filemenu.sh

# Open rofi appmenu
alt + space
    sh $HOME/.config/rofi/appmenu.sh

# Open rofi powermenu
super + p
    sh $HOME/.config/rofi/powermenu.sh

# screenshot
alt + shift + 4
    flameshot gui
